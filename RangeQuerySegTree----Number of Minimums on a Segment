// https://codeforces.com/edu/course/2/lesson/4/1/practice/contest/273169/problem/C
#include <bits/stdc++.h>
using namespace std;
#define trace(...) __f(#__VA_ARGS__, __VA_ARGS__)
template <typename Arg1>
void __f(const char *name, Arg1 &&arg1) {
    cerr << name << " : " << arg1 << endl;
}
template <typename Arg1, typename... Args>
void __f(const char *names, Arg1 &&arg1, Args&&... args) {
    const char *comma = strchr(names + 1, ',');
    cerr.write(names, comma - names) << " : " << arg1 << " | ";
    __f(comma + 1, args...);
}
#define int unsigned long long int
#define ld long double
#define pb push_back
#define mp make_pair
#define fi first
#define se second
#define MOD 1000000007
#define mod 998244353
#define bug cout<<"HY"<<endl
#define boost ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL)
#define numize(A) A.numize(unique(A.begin(), A.end()) - A.begin())
typedef pair<int,int> P;
int power(int a,int b)
{
    if(b==0)
        return 1;
    if(b%2==0)
        return (power((a*a)%mod,b/2))%mod;
    return (a*(power((a*a)%mod,b/2))%mod)%mod;
}
int modInv(int n)
{
    return power(n, MOD-2);
}
int nCr(int n, int r, int p=MOD)
{
   if (r==0)
      return 1;
    int Fact[n+1];
    Fact[0] = 1;
    for (int i=1 ; i<=n; i++)
    {
        Fact[i] = (Fact[i-1]*i)%p;
    }
    return (((Fact[n]* modInv(Fact[r])) % MOD) *(modInv(Fact[n-r]) % MOD)) % MOD;
}
vector<int> SegTree;
vector<int> Count;
void Build(int A[],int node,int start,int end)
{
    if(start==end){
        SegTree[node]=A[start];
        Count[node]=1;
        return;
    }
    int mid=(start+end)/2;
    Build(A,2*node+1,start,mid);
    Build(A,2*node+2,mid+1,end);
    Count[node]=0;
    SegTree[node]=min(SegTree[2*node+1],SegTree[2*node+2]);
    if(SegTree[node]==SegTree[2*node+1])
        Count[node]+=Count[2*node+1];
    if(SegTree[node]==SegTree[2*node+2])
        Count[node]+=Count[2*node+2];
    return;
}
void Update(int ind,int val,int start,int end,int node)
{
    if(start==end){
        SegTree[node]=val;
        Count[node]=1;
        return;
    }
    int mid=(start+end)/2;
    if(ind<=mid){
        Update(ind,val,start,mid,2*node+1);
    }
    else{
        Update(ind,val,mid+1,end,2*node+2);
    }
    Count[node]=0;
    SegTree[node]=min(SegTree[2*node+1],SegTree[2*node+2]);
    if(SegTree[node]==SegTree[2*node+1])
        Count[node]+=Count[2*node+1];
    if(SegTree[node]==SegTree[2*node+2])
        Count[node]+=Count[2*node+2];
    return;
}
P Query(int node,int l,int r,int start,int end)
{
    if(start>r || end<l)
        return {1e10,0};
    if(start>=l && end<=r)
        return {SegTree[node],Count[node]};
    int mid=(start+end)/2;
    P p1=Query(2*node+1,l,r,start,mid);
    P p2=Query(2*node+2,l,r,mid+1,end);
    int m=min(p1.fi,p2.fi);
    int cnt=0;
    if(m==p1.fi)
        cnt+=p1.se;
    if(m==p2.fi)
        cnt+=p2.se;
    return {m,cnt};
}
double PI=3.14159265359;
int32_t main()
{
    boost;
    int n,m,i;
    cin>>n>>m;
    int A[n];
    for(i=0;i<n;i++)
    {
        cin>>A[i];
    }
    int size=1;
    while(size<2*n)
        size*=2;
    SegTree.resize(size);
    Count.resize(size);
    for(i=0;i<size;i++){
        SegTree[i]=1e10;
    }
    Build(A,0,0,n-1);
    for(i=0;i<m;i++)
    {
        int a;
        cin>>a;
        if(a==1)
        {
            int ind,val;
            cin>>ind>>val;
            Update(ind,val,0,n-1,0);
        }
        else
        {
            int l,r;
            cin>>l>>r;
            r--;
            P p=Query(0,l,r,0,n-1);
            cout<<p.fi<<" "<<p.se<<endl;
        }
    }
}
